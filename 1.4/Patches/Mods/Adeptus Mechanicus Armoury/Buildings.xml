<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Adeptus Mechanicus: Armoury</li>
		</mods>
		<match Class="PatchOperationSequence">
            <operations>
                <!-- Cabinets -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="ToolCabinetShelf"][not(designatorDropdown)]</xpath>
                    <value>
                        <designatorDropdown>Cabinets</designatorDropdown>
                    </value>
                </li>


                <!-- Work Benches -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="OGI_TableMachining" or defName="OGC_TableMachining" or defName="OGE_TableMachining" or defName="OGDE_TableMachining" or defName="OGO_TableMachining" or defName="OGT_TableMachining"][not(designatorDropdown)]</xpath>
                    <value>
                        <designatorDropdown>OGBenches</designatorDropdown>
                    </value>
                </li>
            </operations>
        </match>
	</Operation>
</Patch>