<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <!-- Bellow are catagories that are required for multiple mods -->
    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Appliances Expanded</li>
			<li>Vanilla Helixien Gas Expanded</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="Heater"][not(designatorDropdown)]</xpath>
                    <value>
                        <designatorDropdown>Heaters</designatorDropdown>
                    </value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="Cooler"][not(designatorDropdown)]</xpath>
                    <value>
                        <designatorDropdown>Coolers</designatorDropdown>
                    </value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>